<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/tictactoe"
    >

    <TextView
        android:id="@+id/XOtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#200000"
        android:gravity="center"
        android:padding="10dp"
        android:text="Tic Tac Toe"
        android:textColor="@color/white"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/btn_sound"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:drawableStart="@drawable/sound_down"
        android:onClick="MuteSoundHandler" />


    <GridLayout
        android:id="@+id/TicTacToe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/XOtitle"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#9F062768"
        android:columnCount="3"
        android:rowCount="3"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="#9E000000"
            android:onClick="oneHandler"
            android:paddingVertical="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/square_1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text=""
                android:textColor="#f00"
                android:textScaleX="1.2"
                android:textSize="60sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="#9E000000"
            android:onClick="twoHandler"
            android:paddingVertical="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/square_2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text=""
                android:textColor="#f00"
                android:textScaleX="1.2"
                android:textSize="60sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="#9E000000"
            android:onClick="threeHandler"
            android:paddingVertical="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/square_3"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text=""
                android:textColor="#f00"
                android:textScaleX="1.2"
                android:textSize="60sp"  />
        </LinearLayout>

        <LinearLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="#9E000000"
            android:onClick="fourHandler"
            android:paddingVertical="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/square_4"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text=""
                android:textColor="#f00"
                android:textScaleX="1.2"
                android:textSize="60sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="#9E000000"
            android:onClick="fiveHandler"
            android:paddingVertical="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/square_5"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text=""
                android:textColor="#f00"
                android:textScaleX="1.2"
                android:textSize="60sp"  />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="#9E000000"
            android:onClick="sixHandler"
            android:paddingVertical="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/square_6"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text=""
                android:textColor="#f00"
                android:textScaleX="1.2"
                android:textSize="60sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="#9E000000"
            android:onClick="sevenHandler"
            android:paddingVertical="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/square_7"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text=""
                android:textColor="#f00"
                android:textScaleX="1.2"
                android:textSize="60sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="#9E000000"
            android:onClick="eightHandler"
            android:paddingVertical="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/square_8"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text=""
                android:textColor="#f00"
                android:textScaleX="1.2"
                android:textSize="60sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="#9E000000"
            android:onClick="nineHandler"
            android:paddingVertical="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/square_9"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text=""
                android:textColor="#f00"
                android:textScaleX="1.2"
                android:textSize="60sp" />
        </LinearLayout>
    </GridLayout>

    <!--  this is the pop up  -->

    <RelativeLayout
        android:layout_below="@+id/XOtitle"
        android:id="@+id/pupUpRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#E80F0F50"
        android:padding="30dp"
        android:translationY="-800dp"
        >

        <TextView
            android:id="@+id/popUpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Congratulations X you are the winner"
            android:textColor="#fff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/popUpQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popUpTitle"
            android:gravity="center"
            android:padding="14dp"
            android:text="Do you want to play again ?"
            android:textColor="#fff"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popUpQ"
            android:layout_margin="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/popUpNO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="RestartClickHandler"
                android:text="Restart" />

            <Button
                android:id="@+id/popUpOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="ContinueClickHandler"
                android:text="Continue" />
        </LinearLayout>
    </RelativeLayout>

    <!--  score and who is gonna play -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TicTacToe"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#8D0313A3"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/player_x_online"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#FFE500"
                android:alpha="1"
                />

            <ImageView
                android:id="@+id/person_x_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/roundstyle"
                android:src="@drawable/person_x" />

            <TextView
                android:id="@+id/player_x_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_x_id"
                android:layout_centerHorizontal="true"
                android:text="Player X"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/player_x_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/player_x_id"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="0"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#8D0313A3"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/player_o_online"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:alpha="0"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#FFE500"
                />

            <ImageView
                android:id="@+id/person_o_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/roundstyle"
                android:src="@drawable/person_o" />

            <TextView
                android:id="@+id/player_o_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_o_id"
                android:layout_centerHorizontal="true"
                android:text="Player O"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/player_o_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/player_o_id"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="0"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>

    <!--  exit button  -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:backgroundTint="#E2031BEF"
        android:text="Exit"
        android:textColor="#fff"
        android:onClick="ExitClickHandler"
        android:translationZ="1dp"
        />

    <!--  Exit pop up  -->

    <RelativeLayout
        android:id="@+id/popUpExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#E80F0F50"
        android:padding="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:translationY="800dp"
        >

        <TextView
            android:id="@+id/popUpMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Are you sure you want to exit ?"
            android:textColor="#fff"
            android:textSize="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popUpMessage"
            android:layout_margin="10dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/popUpExitNO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:onClick="NOExitClickHandler"
                android:text="No" />

            <Button
                android:id="@+id/popUpExitOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:onClick="OKExitClickHandler"
                android:text="Yes" />
        </LinearLayout>
    </RelativeLayout>

    <!--  profile  -->

    <RelativeLayout
        android:id="@+id/owner_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#05379A"
        android:translationZ="2dp"
        >

        <ImageView
            android:id="@+id/first_img"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:alpha="1"
            android:onClick="ChangeImageHandler"
            android:scaleType="fitXY"
            android:src="@drawable/photo_1"
            android:translationZ="1dp" />
        <ImageView
            android:id="@+id/seconde_img"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/photo_2"
            android:scaleType="fitXY"
            android:alpha="0"
            android:translationZ="0dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_img"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#3345AA"
            android:gravity="center"
            android:padding="20dp"
            android:text="This is a really simple tic tac toe game as a gift to My friend Ait elMekki Aachour."
            android:textColor="#fff"
            android:textSize="22dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:onClick="StartClickHandler"
            android:text="Start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#3345AA"
            android:onClick="RevealInfoHandler"
            android:padding="5dp"
            android:text="IBA"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:translationZ="2dp" />

    </RelativeLayout>

    <!--  my profile  -->

    <RelativeLayout
        android:id="@+id/IBA_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#F33345AA"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:translationZ="3dp"
        android:translationY="-1000dp"
        >

        <ImageView
            android:id="@+id/IBA_img"
            android:layout_width="100dp"
            android:layout_margin="20dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ismail_ben_alla" />
        <TextView
            android:id="@+id/IBA_name"
            android:layout_below="@+id/IBA_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ben All Ismail"
            android:textColor="#FFC107"
            android:textSize="26dp"
            android:gravity="center"
            android:layout_margin="25dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/IBA_desc"
            android:layout_below="@+id/IBA_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am a computer science engineering student at ENSA, I create websites, web apps, and mobile apps.
As you can see, this is a really simple app that I created as a gift for one of my dearest friends in this amazing planet."
            android:textColor="#fff"
            android:textSize="20dp"
            android:padding="18dp"
            android:gravity="center"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_below="@+id/IBA_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ismailbenalla52@gmail.com"
            android:textColor="#fff"
            android:textSize="20dp"
            android:padding="18dp"
            android:gravity="center"
            />

    </RelativeLayout>

</RelativeLayout>